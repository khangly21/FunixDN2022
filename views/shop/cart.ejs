<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(products.length > 0) { %>
                <ul>
                    <!--I wanna render products here-->
                    <% products.forEach(p=>{  %>
                         <!--Here, I output product information -->
                         <!--chú ý là p theo định nghĩa trong controllers>>shop.js chính là đối tượng {productData:product,qty:cardProductData.qty}-->
                         <li>
                            <p><%= p.productData.title %> (<%= p.qty %>)</p>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" name="productId" value="<%= p.productData.id %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                         </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>

        </main>
        <%- include('../includes/end.ejs') %>